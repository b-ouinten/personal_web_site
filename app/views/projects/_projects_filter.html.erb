      <div class="col-auto mb-3 mb-lg-5">
        <%= image_tag "tags_pngs/#{tag.code}.png", size: '100x100', id: tag.id, class: 'img-check img-thumbnail img-fluid border-success border-2', alt: "#{tag.title}" %>
